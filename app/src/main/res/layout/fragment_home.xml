<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="48dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_welcome_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_menu"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="?attr/colorOnSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_dynamic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hey User, ease your uni stuff"
                android:fontFamily="@font/alfa_slab_one_regular"
                android:textSize="26sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_main_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_utility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utility"
                    android:checkable="true"
                    android:checked="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_peer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peer Solver"
                    android:checkable="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

            <GridLayout
                android:id="@+id/main_card_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_canteen"
                    android:tag="utility"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_yellow"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_util_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UTILITY"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_canteen"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_util_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Canteen Menu"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_task"
                    android:tag="utility"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_blue"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_util_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UTILITY"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_task"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_util_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Task Manager"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_links"
                    android:tag="utility"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_blue"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_util_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UTILITY"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_links"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_util_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Links"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_event"
                    android:tag="utility"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_yellow"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_util_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UTILITY"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_event"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_util_4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Tracker"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_doubt"
                    android:tag="peer"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_purple"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_peer_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEER SOLVER"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_doubt"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_peer_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doubt Forum"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_group"
                    android:tag="peer"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_red"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_peer_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEER SOLVER"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_group"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_peer_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Finder"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_lost_found"
                    android:tag="peer"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_card_purple"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/lbl_peer_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PEER SOLVER"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="79dp"
                            android:layout_height="75dp"
                            android:src="@drawable/img_lost_found"
                            android:scaleType="fitCenter"
                            android:layout_below="@id/lbl_peer_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lost &amp; Found"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent" />

            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
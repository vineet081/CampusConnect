<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_link_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_links"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_link_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="University Exam Portal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toEndOf="@id/iv_link_icon"
            app:layout_constraintTop_toTopOf="@id/iv_link_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_open_external" />

        <TextView
            android:id="@+id/tv_link_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Check your semester results and download hall tickets."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tv_link_title"
            app:layout_constraintEnd_toEndOf="@id/tv_link_title"
            app:layout_constraintTop_toBottomOf="@id/tv_link_title" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_link_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Academics"
            android:textSize="12sp"
            android:clickable="false"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            app:chipMinHeight="32dp"
            app:layout_constraintStart_toStartOf="@id/tv_link_title"
            app:layout_constraintTop_toBottomOf="@id/tv_link_description"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iv_open_external"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_links"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_important_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_event"
            app:tint="#D32F2F"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
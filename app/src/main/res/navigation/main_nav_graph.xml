<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.vineet.campusconnect.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/nav_search"
        android:name="com.vineet.campusconnect.FacultyDirectoryActivity"
        android:label="Faculty Directory"
        tools:layout="@layout/activity_faculty_directory" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.vineet.campusconnect.fragments.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.vineet.campusconnect.ProfileActivity"
        android:label="Profile"
        tools:layout="@layout/activity_profile" />

    <fragment
        android:id="@+id/nav_canteen"
        android:name="com.vineet.campusconnect.fragments.CanteenFragment"
        android:label="Canteen Menu"
        tools:layout="@layout/fragment_canteen" />

    <fragment
        android:id="@+id/nav_task_manager"
        android:name="com.vineet.campusconnect.fragments.TaskManagerFragment"
        android:label="Task Manager"
        tools:layout="@layout/fragment_task_manager" />

    <fragment
        android:id="@+id/nav_link_categories"
        android:name="com.vineet.campusconnect.fragments.LinkCategoriesFragment"
        android:label="Quick Links"
        tools:layout="@layout/fragment_quick_links_categories" >

        <action
            android:id="@+id/action_categories_to_list"
            app:destination="@id/nav_link_list" />

    </fragment>

    <fragment
        android:id="@+id/nav_link_list"
        android:name="com.vineet.campusconnect.fragments.QuickLinksFragment"
        android:label="Links"
        tools:layout="@layout/fragment_quick_links" >
        <argument
            android:name="CATEGORY_NAME"
            app:argType="string"
            android:defaultValue="All" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.vineet.campusconnect.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>